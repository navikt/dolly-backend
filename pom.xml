<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.3.3.RELEASE</version>
	</parent>

	<groupId>no.nav.dolly-backend</groupId>
	<artifactId>dolly-backend</artifactId>
	<version>1.18.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>dolly-backend</name>
	<description>Applikasjon for oppretting av testpersoner</description>

    <distributionManagement>
        <repository>
            <id>github</id>
            <url>https://github.com/navikt/dolly-backend.git</url>
        </repository>
    </distributionManagement>

    <scm>
        <developerConnection>scm:git:git@github.com:navikt/dolly-backend.git</developerConnection>
        <connection>scm:git:git@github.com:navikt/dolly-backend.git</connection>
        <url>https://github.com/navikt/dolly-backend</url>
        <tag>HEAD</tag>
    </scm>

    <repositories>
        <repository>
            <id>github-package-registry-navikt</id>
            <url>https://maven.pkg.github.com/navikt/maven-release</url>
        </repository>
    </repositories>

    <modules>
        <module>dolly-backend-app</module>
        <module>dolly-backend-domain</module>
        <module>dolly-backend-app-local</module>
        <module>dolly-backend-app-nais</module>
    </modules>

    <properties>
        <application.name>dolly-backend</application.name>
        <application.version>${project.version}</application.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>11</java.version>
        <spring-cloud.version>2.2.0.RELEASE</spring-cloud.version>
        <freg-security-oidc.version>2c24d35d</freg-security-oidc.version>
        <springfox.version>2.9.2</springfox.version>
        <orika.version>1.5.4</orika.version>
        <cxf.version>3.3.4</cxf.version>
        <ehcache-core.version>2.6.11</ehcache-core.version>
        <commons-collections4.version>4.1</commons-collections4.version>
        <jettison.version>1.4.0</jettison.version>
        <spring-cloud-contract.version>2.2.0.RELEASE</spring-cloud-contract.version>
        <wiremock.version>2.24.0</wiremock.version>
        <freg-security-test-oidc-tools.version>2c24d35d</freg-security-test-oidc-tools.version>
        <sonar.exclusions>**/dolly/domain/**, **/dolly/regression/**, **/dolly/exceptions/**,**/main/dolly-web/**,
            **/dolly/testdata/builder/**
        </sonar.exclusions>

        <papertrailapp.version>1.0.0</papertrailapp.version>
        <logstash-logback-encoder.version>5.1</logstash-logback-encoder.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-vault-config</artifactId>
            <version>${spring-cloud.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <dependency>
            <groupId>net.sf.ehcache</groupId>
            <artifactId>ehcache-core</artifactId>
            <version>${ehcache-core.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
            <version>${commons-collections4.version}</version>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>net.logstash.logback</groupId>
                <artifactId>logstash-logback-encoder</artifactId>
                <version>${logstash-logback-encoder.version}</version>
            </dependency>

            <dependency>
                <groupId>no.nav.freg</groupId>
                <artifactId>freg-security-oidc</artifactId>
                <version>${freg-security-oidc.version}</version>
            </dependency>

            <dependency>
                <groupId>io.springfox</groupId>
                <artifactId>springfox-swagger2</artifactId>
                <version>${springfox.version}</version>
            </dependency>

            <dependency>
                <groupId>io.springfox</groupId>
                <artifactId>springfox-swagger-ui</artifactId>
                <version>${springfox.version}</version>
            </dependency>

			<dependency>
				<groupId>ma.glasnost.orika</groupId>
				<artifactId>orika-core</artifactId>
				<version>${orika.version}</version>
			</dependency>

            <dependency>
                <groupId>org.codehaus.jettison</groupId>
                <artifactId>jettison</artifactId>
                <version>${jettison.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-spring-boot-starter-jaxws</artifactId>
                <version>${cxf.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-jaxws</artifactId>
                <version>${cxf.version}</version>
            </dependency>
		</dependencies>

	</dependencyManagement>

</project>
